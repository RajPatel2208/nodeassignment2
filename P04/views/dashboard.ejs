<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2>Employee List</h2>
    <a href="/add" class="btn btn-success mb-3">Add Employee</a>
    <a href="/logout" class="btn btn-danger mb-3 float-end">Logout</a>
    <table class="table table-bordered">
      <thead>
        <tr><th>EmpID</th><th>Name</th><th>Email</th><th>Salary</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { %>
          <tr>
            <td><%= emp.empid %></td>
            <td><%= emp.name %></td>
            <td><%= emp.email %></td>
            <td>â‚¹ <%= emp.totalSalary %></td>
            <td>
              <a href="/edit/<%= emp._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete/<%= emp._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2 class="mt-5">Leave Applications</h2>
    <table class="table table-bordered">
      <thead>
        <tr><th>EmpID</th><th>Date</th><th>Reason</th><th>Status</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% leaves.forEach(leave => { %>
          <tr>
            <td><%= leave.empid %></td>
            <td><%= new Date(leave.date).toDateString() %></td>
            <td><%= leave.reason %></td>
            <td><span class="badge bg-<%= leave.grant === 'approved' ? 'success' : leave.grant === 'rejected' ? 'danger' : 'warning' %>"><%= leave.grant %></span></td>
            <td>
              <% if (leave.grant === 'pending') { %>
                <a href="/leave/<%= leave._id %>/approved" class="btn btn-success btn-sm">Approve</a>
                <a href="/leave/<%= leave._id %>/rejected" class="btn btn-danger btn-sm">Reject</a>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
